<%= render "shared/footer" %>
<div class="my-pets-container">
<%= render "shared/mini_card" %>

  <div class="add-pet-container">
    <div class="round-button" style="margin-top: 30px">
      <%= link_to raw('<i class="fa-solid fa-plus fa-2xl" style="color: #FFFBF4; margin-top: 10px;"></i>'), new_pet_path %>

    </div>
  </div>
</div>

<ul>
  <% @upcoming_events.each do |event| %>
    <% if Date.today == event.start %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        Attention, n'oubliez pas votre évènement ce jour pour <strong><%= event.pet.name %></strong> : <%= event.title %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
      </div>
    <% end %>
  <% end %>
</ul>