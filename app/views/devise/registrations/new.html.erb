
<div class="container">
  <h1>Sign up</h1>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  :input_html => { :class => 'form-input' },
                  label: ('<i class="fa-solid fa-at fa-lg" style="color: #48ADA9;"></i>').html_safe,
                  placeholder: 'Email' %>
      <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "new-password" },
                  :input_html => { :class => 'form-input' },
                  label: ('<i class="fa-solid fa-key fa-lg" style="color: #48ADA9;"></i>').html_safe,
                  placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" },
                  :input_html => { :class => 'form-input' },
                  label: ('<i class="fa-solid fa-key fa-lg" style="color: #48ADA9;"></i>').html_safe,
                  placeholder: "Confirmation du mot de passe" %>
    </div>

    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, "Sign up", class: 'green-basic-btn' %>
    </div>
  <% end %>
</div>
